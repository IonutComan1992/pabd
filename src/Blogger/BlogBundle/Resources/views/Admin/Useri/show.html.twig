{% block contentHeader %}
     User <small>detalii user</small>
{% endblock %}
{% block body %}
<div class="row">
        <section class="col-lg-12">
            <div class="nav-tabs-custom">
                
                <div class="tab-content">
                    <div class="tab-pane active">
						<div class="row">
                            <div class="col-md-12">
                                <dl class="dl-horizontal">
                                    <dt>Nume si prenume</dt>
                                    <dd>{{ user.nume }} {{ user.prenume }}</dd>

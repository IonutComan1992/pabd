                                    <dd>{{ user.email }}</dd>
                                </dl>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
							<div class="col-md-4">
                                <dl class="dl-horizontal">
                                    <dt></dt>
									<dd></dd>
                                </dl>
                            </div>
                        </div>
                        <hr>
                        <div class="clearfix">
						    <div class="pull-right">
                                <a href="{{ path('BloggerBlogBundle_admin_user_edit', { 'id': user.id }) }}" class="btn btn-warning"><i class="fa fa-pencil"></i> Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


{# src /Blogger/BlogBundle/Resources/views/Admin/default/index.html.twig #}
{% extends 'BloggerBlogBundle:Admin:base.html.twig' %}
{% block contentHeader %}
    Editare <small>Editare user</small>
{% endblock %}
{% block body %}
 <div class="row">
        <section class="col-lg-12">
            <div class="nav-tabs-custom">
                <div class="tab-content">
                    <div class="tab-pane active">
{{ form_start(form) }}
                            <div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Nume</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.nume, {'attr': {'class': 'form-control'}})  }}
								</div>       
                            </div>
							<div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Prenume</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.prenume, {'attr': {'class': 'form-control'}})  }}
								</div>       
                            </div>
							<div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.email, {'attr': {'class': 'form-control'}})  }}
								</div>       
                            </div>
							<div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Parola</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.password, {'attr': {'class': 'form-control'}})  }}
								</div>
                                
                            </div>
							<div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Repetare parola</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}})  }}
								</div>
                                
                            </div>
							 <hr>
                            <div class="clearfix">
                                <div class="pull-right">
                                     {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}})  }}
                                </div>
                            </div>
{{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

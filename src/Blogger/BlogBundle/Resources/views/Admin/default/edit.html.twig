{# src /Blogger/BlogBundle/Resources/views/Admin/default/index.html.twig #}
{% extends 'BloggerBlogBundle:Admin:base.html.twig' %}
{% block contentHeader %}
     Artciole <small>editare articol</small>
{% endblock %}
{% block body %}
 <div class="row">
        <section class="col-lg-12">
            <div class="nav-tabs-custom">
                <div class="tab-content">
                    <div class="tab-pane active">
                       {{ form_start(form) }}
                            <div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Titlu</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.title, {'attr': {'class': 'form-control'}})  }}
								</div>       
                            </div>
							<div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Autor</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.author, {'attr': {'class': 'form-control'}})  }}
								</div>       
                            </div>
							<div class="form-group">
							<label for="ad_description" class="col-sm-2 control-label">Descriere articol<span class="required">*</span></label>
							<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
							<script>tinymce.init({ selector:'textarea' });</script>
							<div class="col-sm-10">
								{{ form_widget(form.blog, {'attr': {'class': 'form-control'}})  }}
							</div>
							</div>
							<div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Taguri</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.tags, {'attr': {'class': 'form-control'}})  }}
								</div>
                                
                            </div>
							<div class="form-group">
                                <label for="inputTitle" class="col-sm-2 control-label">Poza</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.image, {'attr': {'class': 'form-control'}})  }}
								</div>
                                
                            </div>
							 <hr>
                            <div class="clearfix">
                                <div class="pull-right">
                                     {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}})  }}
                                </div>
                            </div>
{{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
